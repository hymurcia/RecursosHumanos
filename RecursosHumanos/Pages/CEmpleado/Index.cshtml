@page
@model RecursosHumanos.Pages.CEmpleado.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get" action="./Index">
    <div class="form-group">
        <label for="nameSearch">Buscar por Cedula:</label>
        <input type="text" class="form-control" id="nameSearch" name="cedula" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Fecha_Contratacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].id_departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].id_rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].id_usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Empleado) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Contratacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Cedula">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Cedula">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Cedula">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
